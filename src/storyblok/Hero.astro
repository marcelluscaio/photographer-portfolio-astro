---
import { storyblokEditable } from '@storyblok/astro'
import { Image } from 'astro:assets'
import SbRichText from '../components/SbRichText.astro';
import StoryblokComponent from '@storyblok/astro/StoryblokComponent.astro';

type Props = {
  blok: any;
}

const { blok } = Astro.props
---

<section  {...storyblokEditable(blok)} class="section layout-px layout-py">
  <div class="container">
      <SbRichText content={blok.content} />
    <div class="button-container">
      {blok.buttons.map(button => <StoryblokComponent blok={button} containerBg={'var(--background-secondary)'} />)}
    </div>
  </div>
  <Image 
  src={blok.image.filename}
  alt={blok.image.alt}
  inferSize
  class='image'
  />   
</section>

<style>
.section {
  position: relative;
  background-color: var(--background-secondary);
  isolation: isolate;
  min-height: 85vh;
  display: grid;
  place-items: center;
  text-align: center;
}

.container {
  display: grid;
  gap: 2rem
}

.button-container{
  display: flex;
  justify-content: center;
  gap: 1rem;
  flex-wrap: wrap;
}

.image{
  position: absolute;
  inset: 0;
  width: 100%;
   height: 100%;
  object-fit: cover;
  z-index: -1;
  filter: blur(4px) brightness(0.3);
}
</style>