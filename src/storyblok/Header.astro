---
import { storyblokEditable } from '@storyblok/astro'
import type { Button } from './Button.astro';
import StoryblokComponent from '@storyblok/astro/StoryblokComponent.astro';

type Props = {
  blok: {
    logo: string;
    links: Button[]
  },
  path: string
}

const { blok, path } = Astro.props
---

<header  {...storyblokEditable(blok)} class="header">
  <nav>
    <ul class="header__nav">
      <li class="header__nav__logo">
        <a href="/" >
          {blok.logo}
          </a>
      </li>
      <li>
        <ul class="header__nav__links-container">
          {blok.links.map(link => <StoryblokComponent blok={link} />)}
        </ul>
      </li>
    </ul>

    </nav>
</header>

<style>
  .header {
    padding: 1rem  1.5rem
  }

  .header__nav{
    display: grid;
    gap: 1.5rem;
    text-align: center;
  }

  .header__nav__links-container{
      display: flex;
      gap: 1rem;
      justify-content: center;
      flex-wrap: wrap;
    }

    .header__nav__logo{
      color: var(--color-primary);
      font-weight: 700;
      font-size: var(--fs-3);
    }

  @media (min-width: 768px) {
.header {
    padding-inline: 3rem
  }

    .header__nav {
      display: flex;
      justify-content: space-between;
      align-items: center;
    }

    .header__nav__links-container{
      gap: 2rem;
      justify-content: end;
    }    
  }
</style>